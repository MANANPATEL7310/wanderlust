<% layout("layouts/boilerplate") %>

<body class="bg-light">
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-3">
          <div class="card-body p-4">
            <h2 class="card-title text-center mb-4 text-danger fw-bold">
              Add New Destination
            </h2>

            <form
              method="POST"
              action="/listings"
              class="needs-validation"
              novalidate
              enctype="multipart/form-data"
            >
              <!-- Title -->
              <div class="mb-3">
                <label for="title" class="form-label"
                  ><strong>Title of the Destination</strong></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="listing[title]"
                  placeholder="Add a catchy title"
                  required
                />
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Title should be valid.</div>
              </div>

              <!-- Description -->
              <div class="mb-3">
                <label for="description" class="form-label"><strong>Description</strong></label>
                <textarea
                  class="form-control"
                  id="description"
                  name="listing[description]"
                  rows="3"
                  placeholder="Enter Description"
                  required
                ></textarea>
                <div class="invalid-feedback">
                  Please enter a short Description.
                </div>
              </div>

              <!-- $ Image URL -->
              <!-- <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input
                  type="text"
                  class="form-control"
                  id="image"
                  name="listing[image]"
                  placeholder="Enter image URL/Link"
                />
              </div> -->

              <!-- $ Image Upload -->
              <div class="mb-3">
                <label for="image" class="form-label"><strong>Upload Image</strong></label>
                <input
                  type="file"
                  class="form-control"
                  id="image"
                  name="listing[image]"
                  required
                />
              </div>


              <!-- Price -->
              <div class="row">
                <div class="mb-3 col-md-6">
                  <label for="price" class="form-label"><strong>Price (â‚¹)</strong></label>
                  <input
                    type="number"
                    class="form-control"
                    id="price"
                    name="listing[price]"
                    placeholder="1200"
                    required
                  />
                  <div class="invalid-feedback">Price should be valid.</div>
                </div>

                <!-- Country -->
                <div class="mb-4 col-md-6">
                  <label for="country" class="form-label">Country</label>
                  <input
                    type="text"
                    class="form-control"
                    id="country"
                    name="listing[country]"
                    placeholder="India"
                    required
                  />
                  <div class="invalid-feedback">Country should be valid.</div>
                </div>
              </div>

              <!-- Location -->
              <div class="mb-3">
                <label for="location" class="form-label"><strong>Location</strong></label>
                <input
                  type="text"
                  class="form-control"
                  id="location"
                  name="listing[location]"
                  placeholder="Ahmedabad,Gujarat"
                  required
                />
                <div class="invalid-feedback">Location should be valid.</div>
              </div>

<!-- Categories -->
<div class="mb-4">
  <label for="categories" class="form-label fw-semibold">
    Select Categories
        <!-- Tooltip Icon -->
    <i
      class="fa-solid fa-circle-info text-info ms-1"
      data-bs-toggle="tooltip"
      data-bs-placement="right"
      title="Select one or more categories that describe your destination (e.g., Beach, Mountain, City)."
      style="cursor: pointer;"
    ></i>
  </label>
    <small class="text-muted d-block mt-1">
    You can select multiple categories (e.g., Beach + Unique).
  </small>
  <select
    id="categories"
    name="listing[categories][]"
    class="form-select"
    multiple
    required
  >
    <option value="Rooms">Rooms</option>
    <option value="Beach">Beach</option>
    <option value="Cabins">Cabins</option>
    <option value="City">City</option>
    <option value="Farms">Farms</option>
    <option value="Lakefront">Lakefront</option>
    <option value="Hotels">Hotels</option>
    <option value="Mountain">Mountain</option>
    <option value="Pools">Pools</option>
    <option value="Boats">Boats</option>
    <option value="Camping">Camping</option>
    <option value="Arctic">Arctic</option>
    <option value="Unique">Unique</option>
  </select>



  <div class="invalid-feedback">Please select at least one category.</div>
</div>




              <!-- Submit Button -->
              <div class="d-grid">
                <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                  <i class="fa-solid fa-plus-circle me-2"></i> Submit
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Initialize Choices.js -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const element = document.querySelector("#categories");
    if (element) {
      new Choices(element, {
        removeItemButton: true,
        placeholder: true,
        placeholderValue: "Select categories",
      });
    }
  });

      // Initialize Bootstrap tooltip
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
    [...tooltipTriggerList].map(el => new bootstrap.Tooltip(el));
</script>
</body>
