<% layout("layouts/boilerplate") %>

<body>
  <div class="container-fluid">

<%- include("../includes/filter.ejs") %>

<!-- Search Bar -->
<div class="mb-4 d-flex justify-content-center">
  <form 
    action="/listings" 
    method="GET" 
    class="d-flex align-items-center gap-2 p-2 shadow-sm bg-white border rounded-pill"
    id="searchForm" 
    style="max-width: 450px; width: 100%;"
  >
    <div class="position-relative flex-grow-1">
      <input 
        type="text" 
        name="search" 
        id="searchInput"
        class="form-control border-0 bg-transparent ps-5"
        placeholder="Search destinations, stays..."
        value="<%= query.search || '' %>"
        style="height: 42px; font-size: 0.95rem;"
      >
      <i class="fa-solid fa-magnifying-glass position-absolute top-50 start-0 translate-middle-y ms-3 text-muted" style="font-size: 1rem;"></i>
    </div>

    <% if (query.search) { %>
      <button 
        type="button" 
        class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
        onclick="clearSearch()" 
        title="Clear search" 
        style="border-radius: 50%; width: 36px; height: 36px;"
      >
        <i class="fa-solid fa-times"></i>
      </button>
    <% } else { %>
      <button 
        type="submit" 
        class="btn btn-primary btn-sm d-flex align-items-center justify-content-center"
        style="border-radius: 50%; width: 36px; height: 36px;"
      >
        <i class="fa-solid fa-arrow-right"></i>
      </button>
    <% } %>
  </form>
</div>

<!-- Active Filters Display -->
<% const hasActiveFilters = query.category || query.priceRange || query.rating || query.search; %>
<% if (hasActiveFilters) { %>
  <div class="alert alert-info d-flex align-items-center gap-3 mb-4 shadow-sm" role="alert" style="border-radius: 15px;">
    <div class="d-flex align-items-center gap-2 flex-wrap">
      <span><i class="fa-solid fa-filter"></i> <strong>Active Filters:</strong></span>
      
      <% if (query.search) { %>
        <span class="badge bg-primary px-3 py-2">
          <i class="fa-solid fa-magnifying-glass me-1"></i> Search: "<%= query.search %>"
        </span>
      <% } %>
      
      <% if (query.category) { %>
        <span class="badge bg-danger px-3 py-2">Category: <%= query.category %></span>
      <% } %>
      
      <% if (query.priceRange) { %>
        <% 
          let priceDisplay = '';
          switch(query.priceRange) {
            case '0-1000': priceDisplay = 'â‚¹0 - â‚¹1000'; break;
            case '1000-5000': priceDisplay = 'â‚¹1000 - â‚¹5000'; break;
            case '5000-10000': priceDisplay = 'â‚¹5000 - â‚¹10000'; break;
            case '10000+': priceDisplay = 'â‚¹10000+'; break;
            default: priceDisplay = query.priceRange;
          }
        %>
        <span class="badge bg-warning text-dark px-3 py-2">Price: <%= priceDisplay %></span>
      <% } %>
      
      <% if (query.rating) { %>
        <% if (query.rating === "no-rating") { %>
          <span class="badge bg-secondary px-3 py-2">Rating: No rating</span>
        <% } else { %>
          <span class="badge bg-success px-3 py-2">Rating: <%= query.rating %>â˜… & up</span>
        <% } %>
      <% } %>
      
      <a href="/listings" class="btn btn-outline-danger btn-sm" style="border-radius: 20px;">
        <i class="fa-solid fa-times me-1"></i> Clear All
      </a>
    </div>
  </div>
<% } %>

<!-- Results Count -->
<% if (typeof allListings !== 'undefined' && allListings.length > 0) { %>
  <h6 class="text-muted mb-3">
    Found <%= allListings.length %> <%= allListings.length === 1 ? 'listing' : 'listings' %>
  </h6>
<% } else { %>
  <div class="text-center py-5">
    <i class="fa-solid fa-search fa-3x text-muted mb-3"></i>
    <p class="text-muted fs-5">No listings found matching your criteria.</p>
    <% if (hasActiveFilters) { %>
      <a href="/listings" class="btn btn-danger">Clear Filters & View All</a>
    <% } %>
  </div>
<% } %>

    <div class="row">
      <% for (let listing of allListings) { %>
        
        <!-- xs: 12 (1 col) | md: 6 (2 cols) | lg: 4 (3 cols) -->
        <div class="col-12 col-md-6 col-lg-4 mb-4 d-flex">
          <!-- d-flex + w-100 makes cards equal width/height in the row -->
           <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card w-100 h-100" style="border: none;">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="object-fit: cover; height: 25vh; border-radius: 20px;">
             
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-1"><%= listing.title %></h5>
<p class="card-text mb-3">
  &#8377; <%= listing.price ? listing.price.toLocaleString('en-IN') : "N/A" %> / night
</p>
            
              <!-- optional: add a button aligned to bottom -->
              <div class="mt-auto">
                <a href="/listings/<%= listing._id %>" class="btn btn-danger btn-sm">View</a>
              </div>
            </div>
          </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>


  <script>
const urlParams = new URLSearchParams(window.location.search);
const activeCategory = urlParams.get("category");

if (activeCategory) {
  document.querySelectorAll(".category-item").forEach((btn) => {
    if (btn.getAttribute("data-category") === activeCategory) {
      btn.classList.add("text-danger"); // highlight active category
      // ðŸ”¥ Scroll it into view smoothly
setTimeout(() => {
  btn.scrollIntoView({ behavior: "smooth", inline: "center", block: "nearest" });
}, 300);

    }
  });
}

// Clear search function
function clearSearch() {
  const searchInput = document.getElementById("searchInput");
  searchInput.value = "";
  
  // Remove search param from URL while keeping other filters
  const url = new URL(window.location.href);
  url.searchParams.delete("search");
  window.location.href = url.toString();
}

// Preserve other filters when searching
document.getElementById("searchForm").addEventListener("submit", function(e) {
  const form = e.target;
  const formData = new FormData(form);
  const searchValue = formData.get("search");
  
  // Get current URL params
  const url = new URL(window.location.href);
  
  // Keep existing filters
  const category = url.searchParams.get("category");
  const priceRange = url.searchParams.get("priceRange");
  const rating = url.searchParams.get("rating");
  
  // Build new URL
  let newUrl = "/listings?";
  const params = [];
  
  if (searchValue && searchValue.trim()) {
    params.push(`search=${encodeURIComponent(searchValue.trim())}`);
  }
  if (category) params.push(`category=${category}`);
  if (priceRange) params.push(`priceRange=${priceRange}`);
  if (rating) params.push(`rating=${rating}`);
  
  newUrl += params.join("&");
  
  // Prevent default form submission and use our custom URL
  e.preventDefault();
  window.location.href = newUrl;
});
</script>

</body>
