



<div class="d-flex align-items-center justify-content-start flex-nowrap py-2 px-3 border-bottom mb-4 bg-white "
     style="top: 70px; z-index: 1000; overflow: hidden;">

     <div class="position-relative" style="width: 85%;">
    <button id="scrollLeftButton" type="button" class="btn border-0" style="
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 80px;
      background: linear-gradient(to right, rgba(255,255,255,1) 70%, rgba(255,255,255,0) 20%);
      display: none;
      align-items: center;
      justify-content: flex-start;
      z-index: 10;
      padding: 0;">
      <i class="fa-solid fa-chevron-left text-muted ms-3" style="font-size: 1rem; pointer-events: none;"></i>
    </button>

    <!-- Scrollable Categories -->
    <div id="categoryScrollContainer" class="d-flex align-items-center gap-4 overflow-x-scroll flex-nowrap" 
         style="scrollbar-width: none; -ms-overflow-style: none;">

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Rooms" style="min-width: 80px;">
        <i class="fa-solid fa-bed fs-5"></i>
        <p class="small mb-0">Rooms</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Beach" style="min-width: 80px;">
        <i class="fa-solid fa-umbrella-beach fs-5"></i>
        <p class="small mb-0">Beach</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Cabins" style="min-width: 80px;">
        <i class="fa-solid fa-tree fs-5"></i>
        <p class="small mb-0">Cabins</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="City" style="min-width: 80px;">
        <i class="fa-solid fa-city fs-5"></i>
        <p class="small mb-0">City</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Farms" style="min-width: 80px;">
        <i class="fa-solid fa-tractor fs-5"></i>
        <p class="small mb-0">Farms</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Lakefront" style="min-width: 80px;">
        <i class="fa-solid fa-water fs-5"></i>
        <p class="small mb-0">Lakefront</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Hotels" style="min-width: 80px;">
        <i class="fa-solid fa-hotel fs-5"></i>
        <p class="small mb-0">Hotels</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Mountain" style="min-width: 80px;">
        <i class="fa-solid fa-mountain fs-5"></i>
        <p class="small mb-0">Mountain</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Pools" style="min-width: 80px;">
        <i class="fa-solid fa-water-ladder fs-5"></i>
        <p class="small mb-0">Pools</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Boats" style="min-width: 80px;">
        <i class="fa-solid fa-sailboat fs-5"></i>
        <p class="small mb-0">Boats</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Camping" style="min-width: 80px;">
        <i class="fa-solid fa-campground fs-5"></i>
        <p class="small mb-0">Camping</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Arctic" style="min-width: 80px;">
        <i class="fa-solid fa-snowflake fs-5"></i>
        <p class="small mb-0">Arctic</p>
      </button>

      <button class="category-item btn text-center border-0 bg-transparent" data-category="Unique" style="min-width: 80px; margin-right: 40px;">
        <i class="fa-solid fa-igloo fs-5"></i>
        <p class="small mb-0">Unique</p>
      </button>
    </div>

    <button id="scrollRightButton" type="button" class="btn border-0" style="
      position: absolute;
      top: 0;
      right: 0;
      height: 100%;
      width: 80px;
      background: linear-gradient(to left, rgba(255,255,255,1) 70%, rgba(255,255,255,0) 20%);
      display: flex;
      align-items: center;
      justify-content: flex-end;
      z-index: 10;
      padding: 0;">
      <i class="fa-solid fa-chevron-right text-muted me-3" style="font-size: 1rem; pointer-events: none;"></i>
    </button>
  </div>

  <button type="button"
          class="btn btn-outline-dark btn-sm d-flex align-items-center gap-1 flex-shrink-0 ms-3"
          data-bs-toggle="modal"
          data-bs-target="#filterModal">
      <i class="fa-solid fa-sliders"></i> Filters
  </button>
</div>

<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header">
                <h5 class="modal-title fw-semibold" id="filterModalLabel">Filter Listings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="filterForm">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Price Range</label>
                        <select class="form-select" name="priceRange" id="priceRangeSelect">
                            <option value="">Any</option>
                            <option value="0-1000">₹0 - ₹1000</option>
                            <option value="1000-5000">₹1000 - ₹5000</option>
                            <option value="5000-10000">₹5000 - ₹10000</option>
                            <option value="10000+">₹10000+</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Rating</label>
                        <select class="form-select" name="rating" id="ratingSelect">
                            <option value="">All</option>
                            <option value="4">4★ & up</option>
                            <option value="3">3★ & up</option>
                            <option value="2">2★ & up</option>
                            <option value="1">1★ & up</option>
                            <option value="no-rating">No rating</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Type</label>
                        <select class="form-select" name="category" id="categorySelect">
                            <option value="">Any</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Beach">Beach</option>
                            <option value="Cabins">Cabins</option>
                            <option value="City">City</option>
                            <option value="Farms">Farms</option>
                            <option value="Lakefront">Lakefront</option>
                            <option value="Hotels">Hotels</option>
                            <option value="Mountain">Mountain</option>
                            <option value="Pools">Pools</option>
                            <option value="Boats">Boats</option>
                            <option value="Camping">Camping</option>
                            <option value="Arctic">Arctic</option>
                            <option value="Unique">Unique</option>
                        </select>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="applyFiltersBtn">Apply Filters</button>
            </div>
        </div>
    </div>
</div>



